extends layout

block content
  br
  section.header
    header
  .rowl
    form.col
      h4 USER LOGIN
      br
      .row
        .input-field.col.white-text
          input#email.validate(type='email')
          label(for='email', data-error='wrong', data-success='right') Email
      .row
        .input-field.col.white-text
          input#password.validate(type='password')
          label(for='password') Password
      br 
      .row.center
        button.btn.waves-effect.waves-light(type='submit', name='action')
          | Login
          i.material-icons.right send

      .row
        p.center.white-text
            | Don't have account? Click 
            b
              a.blue-text.link(href= 'http://localhost:3000/sign_up', target= '_blank')   Sign-Up     

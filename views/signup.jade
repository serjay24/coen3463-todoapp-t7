extends layout

block content
  br
  section.header
    header
  br
  .container
    h4 Create Account
    form(method= 'POST')
      if (status)
          h6.white-text.red(style= "padding: 1%")= status
        .row
          .col.s12.m12.l12
            .input-field.col.s12.m12.l12.white-text
              input#username.validate(type='text', name= 'username', value= username)
              label(for='first_name') Username
        .row
          .col.s12.m6.l6
            .input-field.col.s12.m12.l12.white-text
              input#first_name.validate(type='text', name= 'firstName', value= first_name)
              label(for='first_name') First Name
          .col.s12.m6.l6
            .input-field.col.s12.m12.l12.white-text
              input#last_name.validate(type='text', name= 'lastName', value= last_name)
              label(for='last_name') Last Name
        .row
          .col.s12.m6.l6
            .input-field.col.s12.m12.l12.white-text
              input#email.validate(type='email', name= 'email', value= email)
              label(for='email', data-error='wrong', data-success='right') Email
          .col.s12.m6.l6
            .input-field.col.s12.m12.l12.white-text
              input#password.validate(type='password', name= 'password', value= password)
              label(for='password') Password
        .row.center
          button.btn.waves-effect.waves-light(type='submit', name='action')
            | Register
            i.fa.fa-send.small.left
        .row
          p.white-text.center
              | Already have account? Click 
              b
                a.blue-text.link(href= '/login') Login